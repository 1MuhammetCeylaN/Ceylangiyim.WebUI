@model Product

@{
    ViewData["Title"] = "Ürün Düzenle";
}

<hr />
<form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-6 col-sm-3">

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Image" />
            <input type="hidden" asp-for="HelperImage1" />
            <input type="hidden" asp-for="HelperImage2" />
            <input type="hidden" asp-for="HelperImage3" />
            <input type="hidden" asp-for="CreateDate" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"> </textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscountRate" class="control-label"></label>
                <input asp-for="DiscountRate" class="form-control" />
                <span asp-validation-for="DiscountRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscountedPrice" class="control-label"></label>
                <input asp-for="DiscountedPrice" class="form-control" />
                <span asp-validation-for="DiscountedPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductCode" class="control-label"></label>
                <input asp-for="ProductCode" class="form-control" />
                <span asp-validation-for="ProductCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrandId" class="control-label"></label>
                <select asp-for="BrandId" class="form-select" asp-items="ViewBag.BrandId"></select>
                <span asp-validation-for="BrandId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderNo" class="control-label"></label>
                <input asp-for="OrderNo" class="form-control" />
                <span asp-validation-for="OrderNo" class="text-danger"></span>
            </div>


        </div>

        <div class="col-md-3 col-sm-3">
            <h2>Resim Düzenle</h2>

            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" type="file" />
                <span asp-validation-for="Image" class="text-danger"></span>
                @if (Model.Image != null && !string.IsNullOrEmpty(Model.Image))
                {
                    <img src="/Img/Products/@Model.Image" height="100" />

                    <label class="form-check-label">
                        @Html.CheckBox("cbResmiSil") Resmi Sil
                    </label>
                }
            </div>
            <div class="form-group">
                <label asp-for="HelperImage1" class="control-label"></label>
                <input asp-for="HelperImage1" class="form-control" type="file" />
                @if (Model.HelperImage1 != null && !string.IsNullOrEmpty(Model.HelperImage1))
                {
                    <img src="/Img/Products/@Model.HelperImage1" height="100" />

                    <label class="form-check-label">
                        @Html.CheckBox("cbResmiSil") Resmi Sil
                    </label>
                }
                <span asp-validation-for="HelperImage1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HelperImage2" class="control-label"></label>
                <input asp-for="HelperImage2" class="form-control" type="file" />
                @if (Model.HelperImage2 != null && !string.IsNullOrEmpty(Model.HelperImage2))
                {
                    <img src="/Img/Products/@Model.HelperImage2" height="100" />

                    <label class="form-check-label">
                        @Html.CheckBox("cbResmiSil") Resmi Sil
                    </label>
                }
                <span asp-validation-for="HelperImage2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HelperImage3" class="control-label"></label>
                <input asp-for="HelperImage3" class="form-control" type="file" />
                @if (Model.HelperImage3 != null && !string.IsNullOrEmpty(Model.HelperImage3))
                {
                    <img src="/Img/Products/@Model.HelperImage3" height="100" />

                    <label class="form-check-label">
                        @Html.CheckBox("cbResmiSil") Resmi Sil
                    </label>
                }
                <span asp-validation-for="HelperImage3" class="text-danger"></span>
            </div>
            <div class="form-group form-check my-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group form-check my-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsHome" /> @Html.DisplayNameFor(model => model.IsHome)
                </label>
            </div>
            <div class="form-group form-check my-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="NewlyAdded" /> @Html.DisplayNameFor(model => model.NewlyAdded)
                </label>
            </div>
        </div>

        <div class="col-sm-3 col-md-3">
            <h2>Boyut Düzenle</h2>


            <div class="form-group form-check my-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="size1" /> @Html.DisplayNameFor(model => model.size1)
                </label>
            </div>
            <div class="form-group form-check my-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="size2" /> @Html.DisplayNameFor(model => model.size2)
                </label>
            </div>
            <div class="form-group form-check my-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="size3" /> @Html.DisplayNameFor(model => model.size3)
                </label>
            </div>
            <div class="form-group form-check my-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="size4" /> @Html.DisplayNameFor(model => model.size4)
                </label>
            </div>
            <div class="form-group form-check my-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="size5" /> @Html.DisplayNameFor(model => model.size5)
                </label>
            </div>
            <div class="form-group form-check my-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="size6" /> @Html.DisplayNameFor(model => model.size6)
                </label>
            </div>

        </div>


        <div class="form-group">
            <input type="submit" value="Kaydet" class="btn btn-primary" />
        </div>
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-outline-dark">Listeye Dön</a>
</div>

<h3>Renk Seçenekleri</h3>
<form asp-action="AddColor" method="post" enctype="multipart/form-data">
    <input type="hidden" name="productId" value="@Model.Id" />

    <label>Renk Adı</label>
    <input type="text" name="colorName" class="form-control" required />

    <label>Renk Görseli</label>
    <input type="file" name="image" class="form-control" required />

    <label>Yönlendirme Linki</label>
    <input type="text" name="redirectUrl" class="form-control" />

    <button type="submit" class="btn btn-primary mt-2">Ekle</button>
</form>

<h4 class="mb-3">Mevcut Renkler</h4>
<div class="row">
    @foreach (var color in Model.ProductColors)
    {
        <div class="col-md-3 col-sm-6 mb-4 d-flex justify-content-center">
            <div class="card shadow-sm border-0 text-center" style="width: 180px;">
                <a href="@color.RedirectUrl">
                    <img src="@color.ImageUrl" class="card-img-top img-fluid rounded"
                         alt="@color.ColorName"
                         style="width: 450px; height: 200px; object-fit: cover; display: block; margin: auto;">
                </a>
                <div class="card-body p-2">
                    <h6 class="text-muted" style="font-size: 12px;">@color.ColorName</h6>

                    <!-- Silme Butonu -->
                    <form asp-action="DeleteColor" method="post" class="d-inline" onsubmit="return confirm('Bu rengi silmek istediğinizden emin misiniz?');">
                        <input type="hidden" name="colorId" value="@color.Id" />
                        <input type="hidden" name="productId" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Sil
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>




